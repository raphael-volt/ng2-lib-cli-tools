{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "lib": [
      "es2015",
      "dom"
    ],
    "skipLibCheck": true,
    "types": [
      "jasmine"
    ],
    "typeRoots": [
			"node_modules/@types",
			"node_modules"
		]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "src/**/*.spec.ts",
    "test/**/*.spec.ts"
  ]
}